rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGLA TEMPORAL PERMISIVA: Cualquier usuario autenticado puede leer y escribir
    // en cualquier lugar. Esto es solo para permitir la creación del primer
    // usuario administrador y se revertirá inmediatamente después.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
