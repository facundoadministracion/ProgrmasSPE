
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== Helper Function (s칩lo para autenticaci칩n b치sica) ==========
    function isSignedIn() {
      return request.auth != null;
    }

    // ========== Root Level - Default Deny ==========
    // Por defecto, se deniega todo para m치xima seguridad.
    match /{path=**} {
      allow read, write: if false;
    }

    // ========== User Profiles ==========
    // Path: /users/{userId}
    match /users/{userId} {
      // CUALQUIER usuario autenticado puede CREAR su PROPIO perfil.
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Un usuario puede LEER su propio perfil.
      // El admin (definido por email) puede LEER CUALQUIER perfil.
      allow read: if isSignedIn() && (request.auth.uid == userId || request.auth.token.email == "crnunezfacundo@gmail.com");
      
      // Un usuario puede ACTUALIZAR su propio perfil.
      // El admin puede ACTUALIZAR CUALQUIER perfil.
      allow update: if isSignedIn() && (request.auth.uid == userId || request.auth.token.email == "crnunezfacundo@gmail.com");

      // Solo el admin puede BORRAR perfiles.
      allow delete: if request.auth.token.email == "crnunezfacundo@gmail.com";
    }

    // ========== Participants, Payments, Config, Novedades, Asistencias ==========
    // Reglas para el resto de las colecciones.
    
    function isAdmin() {
        return request.auth.token.email == "crnunezfacundo@gmail.com";
    }

    // Path: /participants/{participantId}
    match /participants/{participantId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // create, update, delete
    }

    // Path: /payments/{paymentId}
    match /payments/{paymentId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // create, update, delete
    }
    
    // Path: /config/{configId}
    match /config/{configId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // create, update, delete
    }
    
    // Path: /novedades/{novedadId}
    match /novedades/{novedadId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Path: /asistencias/{asistenciaId}
    match /asistencias/{asistenciaId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
