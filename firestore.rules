
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== Helper Function ==========
    function isSignedIn() {
      return request.auth != null;
    }

    // ========== User Profiles ==========
    // Path: /users/{userId}
    match /users/{userId} {
      
      function isAdmin() {
        return request.auth != null && request.auth.token.email == "crnunezfacundo@gmail.com";
      }

      // ANY authenticated user can CREATE and READ/WRITE THEIR OWN document.
      // This is the key to solving the signup problem.
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      // The admin can read and write ANY user document.
      allow read, write: if isAdmin();
    }

    // ========== Participants, Payments, Config, Novedades, Asistencias ==========
    // For now, these collections are only accessible to the admin.
    // This provides a secure default. We can open them up later if needed.
    
    match /participants/{participantId} {
      allow read, write: if request.auth.token.email == "crnunezfacundo@gmail.com"; 
    }

    match /payments/{paymentId} {
      allow read, write: if request.auth.token.email == "crnunezfacundo@gmail.com";
    }
    
    match /config/{configId} {
      allow read, write: if request.auth.token.email == "crnunezfacundo@gmail.com";
    }
    
    match /novedades/{novedadId} {
      allow read, write: if request.auth.token.email == "crnunezfacundo@gmail.com";
    }
    
    match /asistencias/{asistenciaId} {
      allow read, write: if request.auth.token.email == "crnunezfacundo@gmail.com";
    }
  }
}
