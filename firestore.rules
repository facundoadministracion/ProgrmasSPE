
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // safeEmail checks for the existence of the email in the token
    function safeEmail() {
      return request.auth != null && request.auth.token.email != null
        ? request.auth.token.email
        : "";
    }

    // isAdmin checks if the user has the admin email address
    function isAdmin() {
      return safeEmail() == "crnunezfacundo@gmail.com";
    }

    match /users/{userId} {
      // A user can only read and write to their own profile. Admins are handled by other rules.
      // This is the most direct and fail-safe rule.
      allow read, write: if request.auth.uid == userId;
    }

    match /participants/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /payments/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /config/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /novedades/{docId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /asistencias/{docId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
