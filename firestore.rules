
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== Helper Functions ==========
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // The user is an admin if their email is the one specified.
      return request.auth.token.email == "crnunezfacundo@gmail.com";
    }

    function isOwner(userId) {
      // The user is the owner of the document if their UID matches.
      return request.auth.uid == userId;
    }

    // ========== Root Level - Default Deny ==========
    // By default, deny all reads and writes to prevent unauthorized access.
    match /{path=**} {
      allow read, write: if false;
    }

    // ========== User Profiles ==========
    // Path: /users/{userId}
    match /users/{userId} {
      // ANY signed-in user can CREATE their OWN user profile document upon signup.
      allow create: if isSignedIn() && isOwner(userId);
      
      // Users can READ their own profile. Admins can read ANY profile.
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Users can UPDATE their own profile. Admins can update ANY profile.
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());

      // Only admins can delete users.
      allow delete: if isAdmin();
    }

    // ========== Participants, Payments, Config ==========
    // These collections are readable by any signed-in user, but only writable by an admin.
    
    // Path: /participants/{participantId}
    match /participants/{participantId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // create, update, delete
    }

    // Path: /payments/{paymentId}
    match /payments/{paymentId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // create, update, delete
    }
    
    // Path: /config/{configId}
    match /config/{configId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // create, update, delete
    }

    // ========== Novedades & Asistencias ==========
    // These can be read and created by any signed-in user (allowing data_entry role to work).
    // Only admins can modify or delete them.
    
    // Path: /novedades/{novedadId}
    match /novedades/{novedadId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Path: /asistencias/{asistenciaId}
    match /asistencias/{asistenciaId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
