rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserRole(userId) {
      // Devuelve el rol del usuario en minúsculas para comparaciones insensibles a mayúsculas/minúsculas.
      return get(/databases/$(database)/documents/users/$(userId)).data.role.lower();
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                   (request.auth.uid == userId || getUserRole(request.auth.uid) == 'admin');
    }

    match /participants/{participantId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && getUserRole(request.auth.uid) in ['admin', 'data-entry'];

      match /attendance/{attendanceId} {
        allow read, write: if request.auth != null && getUserRole(request.auth.uid) in ['admin', 'data-entry'];
      }
    }
    
    match /novedades/{novedadId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && getUserRole(request.auth.uid) in ['admin', 'data-entry'];
    }

    match /paymentRecords/{recordId} {
      allow read, write: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }

    match /configHistory/{configId} {
      allow read, write: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }
    match /stats/{statId} {
      allow read, write: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }

    // REGLAS AÑADIDAS PARA CORREGIR PERMISOS
    match /configuracionMontos/{docId} {
      allow read, write: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }

    match /pagosRegistrados/{docId} {
      allow read, write: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }

    match /paymentHistory/{docId} {
      allow read, write: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }
  }
}
