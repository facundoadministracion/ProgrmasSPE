
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== Helper Functions ==========
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // The most reliable check: identifies the admin by email, available in the token at all times.
      return isSignedIn() && request.auth.token.email == "crnunezfacundo@gmail.com";
    }

    // ========== User Profiles ==========
    // Emergency rule to unblock registration. This MUST be solved.
    match /users/{userId} {
        // 1. EMERGENCY create rule. Allows ANYONE to create a user profile document.
        // This is not secure for production but is necessary to get past the current blocker.
        allow create;
        
        // 2. Once created, only the owner or an admin can read/update/delete.
        allow read, update, delete: if isOwner(userId) || isAdmin();
    }
    
    // ========== General Rules for Other Collections ==========
    // An admin can do anything.
    // A logged-in user (data_entry) can read most data and create specific documents.
    match /participants/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /payments/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /config/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /novedades/{docId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
     match /asistencias/{docId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
