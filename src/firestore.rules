
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Regla general y permisiva para toda la data de la app
    // Permite a cualquier usuario autenticado leer y escribir en las colecciones.
    // Esto es para facilitar la configuraci√≥n inicial.
    match /artifacts/{appId}/public/data/{collection}/{docId} {
      allow read, write: if isSignedIn();
    }
  }
}
