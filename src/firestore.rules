
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========== Helper Functions ==========
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Un administrador se identifica por su email en el token de autenticación.
    // Esto funciona incluso si el documento del usuario aún no se ha creado.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "crnunezfacundo@gmail.com";
    }

    // El usuario es dueño del documento.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ========== User Profiles ==========
    // Reglas para la colección de usuarios, con permisos separados y explícitos.
    match /users/{userId} {
      // 1. CUALQUIER usuario autenticado puede CREAR su propio perfil.
      // Esta es la regla clave que rompe el círculo vicioso del registro.
      allow create: if isOwner(userId);

      // 2. Un usuario puede LEER y ACTUALIZAR su propio perfil.
      allow read, update: if isOwner(userId);
      
      // 3. Un administrador puede LEER y ESCRIBIR en cualquier perfil.
      // Esta regla se suma a las anteriores, no las reemplaza.
      allow read, write: if isAdmin();
    }

    // ========== Reglas Generales para Otras Colecciones ==========
    // Un administrador puede hacer todo en el resto de las colecciones.
    // Un usuario logueado (data_entry) puede leer datos.
    match /participants/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /payments/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /config/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Los usuarios data_entry pueden crear novedades y asistencias.
    match /novedades/{docId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    match /asistencias/{docId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
